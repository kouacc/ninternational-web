---
const { title } = Astro.props;
import i18next, { t, } from "i18next";
---

<div>
  <h1><span class="gradient">Ninternational</span></h1>
  <h2>{t("hero.subtitle")}</h2>
</div>

<style>
  .gradient {
    background: rgb(0,0,0);
    background-image: linear-gradient(336deg, rgba(0,0,0,1) 0%, rgba(100,5,4,1) 54%, rgba(237,11,10,1) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
    
  }

  div {
    background: url("/img/Hero.svg");
    background-size: cover;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    top: 0;
    padding: 10%;
    gap: 1rem;
    margin: auto;
  }

  h1 {
    font-size: 4rem;
    text-align: center;
    font-family: Montserrat, sans-serif;
    font-weight: 900;
    color: var(--gradient);
  }

  h2 {
    font-size: 1.7rem;
    font-family: Montserrat, sans-serif;
    font-weight: 400;
  }

  h1, h2 {
    margin: 0;
  }

  @media (max-width: 768px) {
    div {
      flex-direction: column;
      padding: 10% 10%;
      gap: 2rem;
    }

    h1 {
      width: 100%;
      font-size: 2rem;
      text-align: center;
      padding-top: 1rem;
    }

    div > h1 {
      margin-top: 4rem;
    }
  }
</style>
