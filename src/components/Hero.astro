---
const { title } = Astro.props;
import i18next, { t, } from "i18next";
---

<div>
  <h1>Ninternational</h1>
  <h2>{t("hero.subtitle")}</h2>
</div>

<style>
  div {
    background: url("/img/Hero.svg");
    background-size: cover;
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    top: 0;
    padding: 10%;
    gap: 1rem;
    margin: auto;
  }

  h1 {
    font-size: 4rem;
    text-align: center;
    font-family: Montserrat, sans-serif;
    font-weight: 900;
  }

  h2 {
    font-size: 2rem;
    font-family: Montserrat, sans-serif;
    font-weight: 500;
  }

  h1, h2 {
    margin: 0;
    color: #000;
  }

  h2 {
		font-size: 1.8rem;
		font-weight: 700;
	}

  @media (max-width: 768px) {
    div {
      flex-direction: column;
      padding: 10% 10%;
      gap: 2rem;
    }

    h1 {
      width: 100%;
      font-size: 2rem;
      text-align: center;
      padding-top: 1rem;
    }

    div > h1 {
      margin-top: 4rem;
    }
  }
</style>
