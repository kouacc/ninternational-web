---
import i18next, { t } from "i18next";
---

  <nav x-show="navmobile" x-collapse.duration.400ms class="nav__mobile">
    <ul>
      <li><a href="/projects">{t("header.projects")}</a></li>
      <li><a href="https://discord.gg/vMRs6ENQJF">{t("header.join")}</a></li>
    </ul>
</nav>

<style>
    nav {
        background-color: transparent;
    }

    nav ul {
    display: flex;
    list-style: none;
    gap: 1rem;
    padding: 0;
    margin: 0;
  }

  nav li a {
    text-decoration: none;
    color: #000;
    font-size: 1.2rem;
  }

  .nav__mobile {
    display: none;
  }

    
  @media screen and (max-width: 630px) {
  
    .nav__mobile {
      display: flex;
      flex-direction: column;
    }
  }



</style>

