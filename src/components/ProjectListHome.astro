---
import ProjectCard from "./ProjectCard.astro";

let allProjects = await Astro.glob("../pages/projects/**/*.mdx");
function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
    }
}

shuffleArray(allProjects);
allProjects = allProjects.slice(0, 2);
---

<h3>Highlighted Projects</h3>
<ul>
    {allProjects.map(post => (
        <ProjectCard
            projectName={post.frontmatter.projectName}
            projectLink={post.url}
            projectImg={post.frontmatter.projectImg}
            projectLanguage={post.frontmatter.projectLanguage}
            projectSystem={post.frontmatter.projectSystem}
     />))}
</ul>

<style>
    ul {
        display: flex;
        gap: 9.38rem;
    }
</style>