---
import Layout from "../layouts/Layout.astro"
---

<Layout title="404 - Ninternational" description="An International fan-translation repository for Nintendo games" img="">
    <div class="wrapper">
        <h1>404</h1>
        <h2>Page not found</h2>
        <div>
            <i class="fa-solid fa-arrow-left"></i>
            <a href="/">Homepage</a>
        </div>
    </div>
    
</Layout>

<style>
    .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 10rem;
    }

    h1 {
        font-size: 10rem;
        margin: 0;
        text-align: center;
    }
    h2 {
        font-size: 3rem;
        margin: 0;
        text-align: center;
    }
    a {
        font-size: 2rem;
        margin: 0;
        text-align: center;
        color: #000;
    }

    .fa-arrow-left {
        font-size: 2rem;
        margin-right: 1rem;
    }

    .wrapper > div {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 2rem;
    }

    img {
        width: 10rem;
        margin: 0;
    }
</style>